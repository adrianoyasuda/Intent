<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Ligar para Vó"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_ligar" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.501" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Abrir um Site"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_site" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_ligar" app:layout_constraintEnd_toEndOf="@+id/bt_ligar"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/bt_ligar"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Mandar Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_email" app:layout_constraintEnd_toEndOf="@+id/bt_site"
            app:layout_constraintStart_toStartOf="@+id/bt_site" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_site" app:layout_constraintHorizontal_bias="0.545"/>
    <Button
            android:text="Mandar Mensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_msg" app:layout_constraintEnd_toEndOf="@+id/bt_email"
            app:layout_constraintStart_toStartOf="@+id/bt_email" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_email"/>
    <Button
            android:text="Abrir Localização"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_location" app:layout_constraintEnd_toEndOf="@+id/bt_msg"
            app:layout_constraintStart_toStartOf="@+id/bt_msg" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_msg"/>
    <Button
            android:text="Compartilhar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bt_compartilhar" app:layout_constraintEnd_toEndOf="@+id/bt_location"
            app:layout_constraintStart_toStartOf="@+id/bt_location" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/bt_location"/>
</androidx.constraintlayout.widget.ConstraintLayout>